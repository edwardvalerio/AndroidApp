<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/offer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Marshmallow ds dsaad fdsf sdf sdfdsfds "
        android:textSize="22dp"
        android:paddingBottom="0dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@+id/point_section"
        android:layout_toStartOf="@+id/point_section"

        />

    <TextView
        android:id="@+id/offer_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offer_title"
        android:layout_marginTop="5dp"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_toLeftOf="@id/point_section"
        android:layout_toStartOf="@+id/point_section"
        android:text="Android 6.0 this is a t e"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/point_section"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:minWidth="90dp"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/offer_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"

            />

    <TextView
        android:id="@+id/points"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#333"
        android:layout_height="wrap_content"
        android:text="Awards"

        />

    <TextView

        android:textColor="#333"
        android:id="@+id/point_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:paddingLeft="8dp"
        android:text="2000"
        android:textSize="28dp"

          />
    </LinearLayout>



</RelativeLayout>